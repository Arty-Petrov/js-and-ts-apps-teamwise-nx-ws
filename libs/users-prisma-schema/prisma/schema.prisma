generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/.prisma/client/users"
}

datasource db {
  provider = "postgresql"
  url      = env("USERS_DB_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  dateBirth    DateTime
  passwordHash String
  isAdmin      Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
